@model IEnumerable<testAuten.Models.Cliente>

@{
	ViewData["Title"] = "Index";
}

<h1>Lista de Clientes</h1>

<p>
	<a asp-action="Create" class="btn btn-success">Inserir Novo</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@* <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> | *@@* 
					<input asp-action="Edit" asp-route-id="@item.Id" type="submit" value="Editar" class="btn btn-primary" /> |
					<input asp-action="Details" asp-route-id="@item.Id" type="submit" value="Detalhes" class="btn btn-info" /> |
					<input asp-action="Delete" asp-route-id="@item.Id" type="submit" value="Apagar" class="btn btn-danger" /> *@
					@* <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Apagar</a> *@
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a> |
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a> |
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" >Apagar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
