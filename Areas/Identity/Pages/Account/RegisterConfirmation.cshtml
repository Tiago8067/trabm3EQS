@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação do Registo";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    O seu registo está terminado: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clica aqui para confirmar</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}

